<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <color name="zcolor_regular_button">#f19512</color>
    <color name="zcolor_regular_button_darker">#f17012</color>
    <color name="zcolor_detail_color">#a1a1a1</color>
    <color name="zcolor_font_color">#565656</color>
    <color name="zcolor_button_font_color">#ffffff</color>
    <color name="zcolor_keypad_button">#B8B8B8</color>
    <color name="zcolor_keypad_darker_button">#a1a1a1</color>
	<color name="zcolor_background">#f1f1f1</color>
    <color name="zcolor_selected_payment_type">#b8b8b8</color>
    <color name="zcolor_view_deital_payment_option">#f19512</color>

    <color name="zcolor_action_bar">#DDDDDD</color>

    <color name="zcolor_payments_list_selected_date_button">#f17012</color>
    <color name="zcolor_payments_list_unselected_date_button">#f19512</color>
        
	<style name="zbutton_zoop" parent="@android:style/Widget.Button">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">@color/zcolor_button_font_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:background">@layout/button_zoop_selector</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:minHeight">55dp</item>
    </style>
    <style name="zbutton_zoop2" parent="@android:style/Widget.Button">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">@color/zcolor_button_font_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:background">#A8A8A8</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:minHeight">55dp</item>
    </style>
    
    
	<style name="zbutton_zoop_special" parent="@android:style/Widget.Button">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">#FFFFFFFF</item>
<!--         <item name="android:shadowColor">#FF0000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:shadowRadius">0.2</item>
 -->        
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:background">@layout/button_zoop_selector</item>
        <item name="android:focusable">true</item>
        <item name="android:minHeight">55dp</item>
        <item name="android:clickable">true</item>
    </style>
		
	<style name="zbutton_keypad" parent="@android:style/Widget.Button">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">@color/zcolor_button_font_color</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:minWidth">20dp</item>
        <item name="android:minHeight">20dp</item>
        <item name="android:padding">2dp</item>
        <item name="android:background">@layout/zbutton_keypad_selector</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>
    <style name="CustomDialog" parent="android:Theme.Light">
        <item name="android:windowNoTitle">false</item>
    </style>
	
</resources>
