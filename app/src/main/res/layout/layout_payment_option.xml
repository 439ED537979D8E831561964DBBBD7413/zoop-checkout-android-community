<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutPaymentOption"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_gravity="center_vertical"

    android:orientation="horizontal" >

    <FrameLayout
        android:id="@+id/viewDetail"
        android:layout_width="15dp"
        android:layout_height="match_parent"
        android:background="@color/zcolor_detail_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:background="#00000000"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewPaymentOptionCaption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:tag="title"
            android:text="Payment Option"
            android:textColor="@color/zcolor_detail_color"
            android:textSize="25sp" />

        <Button
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/bInfoPlan"
            android:layout_marginLeft="10dp"
            android:focusable="false"
            android:visibility="gone"

            android:background="@drawable/infoplan"
            android:layout_gravity="center"

            />

        </LinearLayout>

        <TextView
            android:id="@+id/textViewPaymentInfoPlan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"


            android:layout_marginLeft="15dp"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textViewPaymentOptionCommentCaption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"



            android:layout_marginLeft="15dp"
            android:textSize="12sp" />



    </LinearLayout>

    <ImageView
        android:id="@+id/imageViewPaymentOptionIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_vertical"
        android:adjustViewBounds="true"
        android:padding="5dp" />
    
</LinearLayout>
