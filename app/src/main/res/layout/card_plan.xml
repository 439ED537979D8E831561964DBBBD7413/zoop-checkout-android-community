<?xml version="1.0" encoding="utf-8"?>

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        app:cardElevation="3dp"
        app:cardUseCompatPadding="false"
        app:cardPreventCornerOverlap="false"
        app:cardMaxElevation="3dp"
        app:cardCornerRadius="4dp">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/cPlan"



        android:background="#32CD99"

        android:orientation="vertical"
        >




        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
            android:weightSum="1"
        android:orientation="horizontal"
        >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                >



            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Plan"
                android:textSize="25dp"
                android:textStyle="bold"


                android:layout_margin="10dp"
            android:textColor="#FFFFFF"
            android:id="@+id/tPlan" />



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Plan"
                    android:textSize="30dp"
                    android:textStyle="bold"

                    android:visibility="gone"
                    android:layout_margin="10dp"
                    android:enabled="false"
                    android:textColor="#FFFFFF"
                    android:id="@+id/tPlanid" />




        <Button
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/bInfoPlan"
            android:layout_marginLeft="2dp"
            android:focusable="false"

            android:background="@drawable/infoplan"
            android:layout_gravity="center"

            />
                </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imgActivate"

                android:visibility="gone"
                android:src="@drawable/activateplan"
                android:layout_gravity="right" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:weightSum="2"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:gravity="center"
                android:layout_weight="1"
                android:textSize="25dp"
                android:textStyle="bold"

                android:text="3,99"
                android:textColor="#FFFFFF"
                android:id="@+id/tTaxDebit" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="25dp"
                android:textStyle="bold"


                android:layout_weight="1"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="3,99"
                android:textColor="#FFFFFF"
                android:id="@+id/tTaxCredt" />




        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:weightSum="2"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:gravity="center"
                android:layout_weight="1"
                android:text="Débito"
                android:textSize="15dp"
                android:textColor="#FFFFFF"
                android:id="@+id/tDebit" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"

                android:layout_weight="1"
                android:textSize="15dp"
                android:layout_marginRight="5dp"

                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Crédito a vista"
                android:textColor="#FFFFFF"
                android:id="@+id/tCredit" />


        </LinearLayout>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="10dp"
            android:layout_marginTop="5dp"
            android:padding="5dp"

            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Pagamento no Debito em 2 dias e no crédito a cada 30 dias"
            android:textColor="#FFFFFF"
            android:id="@+id/tINfoPlan" />


        <Space
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            />


    </LinearLayout>


</android.support.v7.widget.CardView>