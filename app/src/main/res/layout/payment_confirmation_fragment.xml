<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_margin="10dp"

    android:layout_height="match_parent">
    <include android:id="@+id/login_status"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:layout_gravity="center"
        layout="@layout/activity_loading" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/formPlan"
        android:orientation="vertical">
        <ScrollView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:fillViewport="true"
            android:layout_height="0dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="8dp"

            android:layout_height="match_parent"
            android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="4dp"
        android:layout_weight="1"
        android:layout_marginLeft="10dp"
        android:orientation="vertical" >
        <TextView
            android:id="@+id/sale_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:maxLines="1"
            android:layout_marginTop="10dp"

            android:textStyle="bold"
            android:text="@string/sale_info"
            android:textAlignment="gravity"
            android:textColor="@color/zcolor_font_color"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/sale_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:maxLines="1"
            android:text="R$ 200,00"
            android:layout_marginTop="10dp"
            android:textAlignment="gravity"
            android:textColor="@color/zcolor_font_color"
            android:textSize="18sp" />
        <LinearLayout
            android:id="@+id/linear_sale_value_installment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical" >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:maxLines="1"
            android:text="Parcelas"
            android:textStyle="bold"
            android:textAlignment="gravity"
            android:textColor="@color/zcolor_font_color"
            android:textSize="18sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/sale_installment"
                android:lines="1"
                android:maxLines="1"
                android:text="2x R$ 100,00"
                android:layout_marginTop="10dp"
                android:textAlignment="gravity"
                android:textColor="@color/zcolor_font_color"
                android:textSize="18sp" />
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >
            <ImageView
                android:id="@+id/brand_logo"
                android:layout_width="50dp"
                android:layout_height="30dp"

                android:src="@drawable/master" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="1"
                android:maxLines="1"
                android:id="@+id/card_brand"
                android:layout_marginLeft="10dp"
                android:text="Mastercard"
                android:textAlignment="gravity"
                android:textColor="@color/zcolor_font_color"
                android:textSize="18sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical" >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="1"
                android:maxLines="1"
                android:text="Número do Cartão"
                android:textStyle="bold"
                android:textAlignment="gravity"
                android:textColor="@color/zcolor_font_color"
                android:textSize="18sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="1"
                android:maxLines="1"
                android:id="@+id/card_number"

                android:text="**** **** **** 1234"
                android:layout_marginTop="10dp"

                android:textAlignment="gravity"
                android:textColor="@color/zcolor_font_color"
                android:textSize="18sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical" >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="1"

                android:maxLines="1"
                android:text="Validade"
                android:textStyle="bold"
                android:textAlignment="gravity"
                android:textColor="@color/zcolor_font_color"
                android:textSize="18sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="1"
                android:maxLines="1"
                android:id="@+id/card_validity"
                android:layout_marginTop="10dp"
                android:textAlignment="gravity"
                android:textColor="@color/zcolor_font_color"
                android:textSize="18sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical" >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="1"
                android:maxLines="1"
                android:text="Titular do Cartão"
                android:textStyle="bold"
                android:textAlignment="gravity"
                android:textColor="@color/zcolor_font_color"
                android:textSize="18sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="1"
                android:maxLines="1"
                android:id="@+id/card_holder"

                android:text="joao das neves"
                android:layout_marginTop="10dp"
                android:textAlignment="gravity"
                android:textColor="@color/zcolor_font_color"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layoutButtonsIfTransactionApproved"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/buttonback"
            style="@style/zbutton_zoop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/button_welcome_previous" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <Button
            android:id="@+id/buttonConfirmTransaction"
            style="@style/zbutton_zoop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/button_sale_confirm" />
    </LinearLayout>
            </LinearLayout>
        </ScrollView>

</LinearLayout>


</LinearLayout>




