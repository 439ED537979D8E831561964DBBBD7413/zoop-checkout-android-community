<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayoutChargeStatus"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="5dp"
    android:background="@color/zcolor_detail_color"
    android:orientation="vertical" >

    <include android:id="@+id/login_status"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:layout_gravity="center"
        layout="@layout/activity_loading" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/formPlan"
        android:orientation="vertical"
        >

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:textSize="16dp"
    android:id="@+id/tSeller"
    />
    <AutoCompleteTextView
        android:id="@+id/selectSeller"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="15dp"
        android:inputType="textNoSuggestions"

        android:background="@drawable/edit_text_layout"
        android:hint="Procurar Estabelecimentos"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:textSize="16dp"

        android:id="@+id/tOrder"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_layout"
        android:drawableLeft="@drawable/extra_sale_information"
        android:drawablePadding="10dp"
        android:hint="# OS"
        android:layout_margin="5dp"
        android:padding="20dp"
        android:inputType="number"
        android:id="@+id/eOrder"
        android:textAppearance="?android:attr/textAppearanceMedium"
        />

    </LinearLayout>

</LinearLayout>