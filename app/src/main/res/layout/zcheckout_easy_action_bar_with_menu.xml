<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="left|center_vertical"
    android:divider="@layout/divider_horizontal"
    android:dividerPadding="3dp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="6dp"
    android:paddingTop="6dp" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_weight="1"
        android:gravity="left" >

        <ImageView
            android:id="@+id/imageViewZoopLogo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_home" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="5dp"
        android:gravity="right|center_vertical">

        <com.zoop.checkout.app.HintedImageButton
            android:id="@+id/imageViewConfigurations"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:background="#00000000"
            android:contentDescription="@string/hint_actionbarbutton_settings"
            android:scaleType="centerInside"
            android:src="@drawable/menu_settings_icon"
            android:layout_weight="1" />

        <com.zoop.checkout.app.HintedImageButton
            android:id="@+id/imageViewTransactionsHistory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:adjustViewBounds="true"
            android:background="#00000000"
            android:contentDescription="@string/hint_actionbarbutton__transactions_history"
            android:scaleType="centerInside"
            android:src="@drawable/menu_transactions_list_icon"
            android:layout_weight="1" />

        <com.zoop.checkout.app.HintedImageButton
            android:id="@+id/imageViewLockIcon"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="3dp"
            android:adjustViewBounds="true"
            android:visibility="gone"
            android:background="#00000000"
            android:scaleType="centerInside"
            android:contentDescription="@string/hint_actionbarbutton_logout"
            android:layout_weight="1" />

    </LinearLayout>

</LinearLayout>



